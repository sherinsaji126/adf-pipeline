{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DelimitedText1",
						"type": "DatasetReference"
					},
					"name": "tripdataCSV"
				},
				{
					"dataset": {
						"referenceName": "tripdatatable",
						"type": "DatasetReference"
					},
					"name": "tripfaresdata"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "tripaggregateCSV",
						"type": "DatasetReference"
					},
					"name": "TripAggregateSink"
				}
			],
			"transformations": [
				{
					"name": "join1"
				},
				{
					"name": "aggregateByPayType"
				}
			],
			"scriptLines": [
				"source(output(",
				"          medallion as string,",
				"          hack_license as string,",
				"          vendor_id as string,",
				"          rate_code as short,",
				"          store_and_fwd_flag as boolean,",
				"          pickup_datetime as timestamp,",
				"          dropoff_datetime as timestamp,",
				"          passenger_count as short,",
				"          trip_time_in_secs as short,",
				"          trip_distance as double,",
				"          pickup_longitude as double,",
				"          pickup_latitude as double,",
				"          dropoff_longitude as double,",
				"          dropoff_latitude as double",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> tripdataCSV",
				"source(output(",
				"          medallion as string,",
				"          hack_license as string,",
				"          vendor_id as string,",
				"          pickup_datetime as string,",
				"          payment_type as string,",
				"          fare_amount as string,",
				"          surcharge as string,",
				"          mta_tax as string,",
				"          tip_amount as string,",
				"          tolls_amount as string,",
				"          total_amount as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> tripfaresdata",
				"tripdataCSV, tripfaresdata join(tripdataCSV@medallion == tripfaresdata@medallion",
				"     && tripdataCSV@hack_license == tripfaresdata@hack_license",
				"     && tripdataCSV@vendor_id == tripfaresdata@vendor_id",
				"     && tripdataCSV@pickup_datetime == toTimestamp(tripfaresdata@pickup_datetime),",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> join1",
				"join1 aggregate(groupBy(payment_type),",
				"     avg_fare = avg(toInteger(total_amount)),",
				"          total_trip_distance = sum(trip_distance)) ~> aggregateByPayType",
				"aggregateByPayType sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> TripAggregateSink"
			]
		}
	}
}